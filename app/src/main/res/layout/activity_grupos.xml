<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jahir.uatasistencia.grupos">

    <Spinner
        android:id="@+id/spgrupos"
        android:layout_width="327dp"
        android:layout_height="26dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="42dp"
        android:spinnerMode="dialog"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:layout_width="398dp"
        android:layout_height="443dp"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toBottomOf="@+id/spgrupos"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        android:id="@+id/alumnos_grupos"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.512" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mis Grupos"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/spgrupos"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/spgrupos" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-1dp"
        android:layout_marginLeft="145dp"
        android:text="Lista de Alumnos"
        app:layout_constraintBottom_toTopOf="@+id/alumnos_grupos"
        app:layout_constraintLeft_toLeftOf="@+id/alumnos_grupos" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vermas"
        android:textColor="#f47a20"
        android:layout_marginTop="477dp"
        app:layout_constraintTop_toBottomOf="@+id/spgrupos"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/spgrupos" />

    <Button
        android:id="@+id/button5"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="75dp"
        android:layout_height="37dp"
        android:layout_marginTop="5dp"
        android:textSize="12dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="+Grupo"
        app:layout_constraintRight_toLeftOf="@+id/button7"
        android:layout_marginRight="-47dp" />

    <Button
        android:id="@+id/button7"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="100dp"
        android:layout_height="37dp"
        android:text="Pasar Lista"
        android:textSize="12dp"
        android:onClick="pasarLista"
        app:layout_constraintTop_toTopOf="@+id/button5"
        android:layout_marginTop="0dp"
        android:layout_marginRight="-12dp"
        app:layout_constraintRight_toRightOf="@+id/spgrupos" />

</android.support.constraint.ConstraintLayout>
